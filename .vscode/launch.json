  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch API",
      "type": "node",
      "request": "launch",
      "args": ["--require", "ts-node/register", "${workspaceFolder}/src/main.ts"],
      "env": {
        "MONGODB_URI": "mongodb://localhost:27017/grocery-store",
        "JWT_SECRET": "test-secret",
        "JWT_EXPIRES_IN": "7200"
      }
    },
    {
      "name": "Seed Store Tree",
      "type": "node",
      "request": "launch",
      "args": ["--require", "ts-node/register", "${workspaceFolder}/scripts/seedStoreTree.ts"],
      "env": {
        "MONGODB_URI": "mongodb://localhost:27017/grocery-store"
      }
    },
    {
      "name": "Seed Users",
      "type": "node",
      "request": "launch",
      "args": ["--require", "ts-node/register", "${workspaceFolder}/scripts/seedUsers.ts"],
      "env": {
        "MONGODB_URI": "mongodb://localhost:27017/grocery-store"
      }
    }
  ]
}
